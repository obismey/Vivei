<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" x:Class="MainResourceDictionary"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    
    <Style TargetType="Thumb" x:Key="RulerThumbStyle" >
        <Setter Property="Template" >
            <Setter.Value>
                <ControlTemplate TargetType="Thumb" >
                    <Ellipse Fill="{TemplateBinding Background}" StrokeThickness="1"
					         Stroke="{TemplateBinding BorderBrush}"/>
                </ControlTemplate>
            </Setter.Value>
        </Setter>

    </Style>
</ResourceDictionary>

<Window x:Class="HelpWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="HelpWindow" Height="300" Width="600" WindowStyle="ToolWindow">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <RichTextBox Name="RichTextBox" x:FieldModifier="Friend" IsReadOnly="True"/>
        
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Verifier les mises à jour" Margin="5" Padding="5" Background="White"/>
            <Button Content="Contacter le support" Margin="5" Padding="5" Background="White"/>
        </StackPanel>
    </Grid>
</Window>
